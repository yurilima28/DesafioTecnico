@using Intelectah.ViewModel
@model FabricantesViewModel

@{
    ViewData["Title"] = "Confirmação para apagar o fabricante";
}

<div class="text-center">
    <h3>Realmente deseja apagar o fabricante @Model.NomeFabricante?</h3>
</div>

<a class="btn btn-primary" role="button" asp-controller="Fabricantes" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger" role="button" asp-controller="Fabricantes" asp-route-id="@Model.FabricanteID" asp-action="Apagar">Confirmar exclusão</a>
