@model VeiculosModel
@using Intelectah.Enums
@using Microsoft.AspNetCore.Mvc.Rendering

<div class="row">
    <div class="form-group col-md-6">
        <label asp-for="ModeloVeiculo">Modelo</label>
        <input asp-for="ModeloVeiculo" class="form-control" placeholder="Informe o modelo do veículos" />
        @Html.ValidationMessageFor(x => x.ModeloVeiculo)
    </div>
    <div class="form-group col-md-6">
        <label asp-for="AnoFabricacao">Ano de fabricação</label>
        <input asp-for="AnoFabricacao" class="form-control" placeholder="Informe o ano de fabricação" />
        @Html.ValidationMessageFor(x => x.AnoFabricacao)
    </div>
    <div class="form-group col-md-6">
        <label asp-for="Tipo">Tipo de Veículo</label>
        <select asp-for="Tipo" class="form-control" asp-items="@(new SelectList(ViewBag.TipoVeiculoOptions, "Value", "Text"))">
            <option value="">Selecione o tipo de veículo</option>
        </select>
        @Html.ValidationMessageFor(x => x.Tipo)
    </div>
</div>
<div class="row">
    <div class="form-group col-md-6">
        <label asp-for="ValorVeiculo">Valor do veículo</label>
        <input asp-for="ValorVeiculo" class="form-control" placeholder="Informe o valor do veículo" />
        @Html.ValidationMessageFor(x => x.ValorVeiculo)
    </div>
    <div class="form-group col-md-6">
        <label asp-for="FabricanteID">Fabricante</label>
        <select asp-for="FabricanteID" class="form-control" asp-items="@(new SelectList(ViewBag.Fabricantes, "Value", "Text"))">
            <option value="">Selecione o fabricante</option>
        </select>
        @Html.ValidationMessageFor(x => x.FabricanteID)
    </div>
    <div class="form-group col-md-12">
        <label asp-for="Descricao">Descrição</label>
        <textarea asp-for="Descricao" class="form-control" placeholder="Informe a descrição"></textarea>
        @Html.ValidationMessageFor(x => x.Descricao)
    </div>

</div>
