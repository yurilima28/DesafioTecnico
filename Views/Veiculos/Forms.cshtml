@model Intelectah.ViewModel.VeiculosViewModel

<form asp-action="Salvar" method="post">
    @Html.AntiForgeryToken()

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="ModeloVeiculo" class="control-label"></label>
            <input asp-for="ModeloVeiculo" class="form-control" />
            <span asp-validation-for="ModeloVeiculo" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="AnoFabricacao" class="control-label"></label>
            <input asp-for="AnoFabricacao" class="form-control" />
            <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="ValorVeiculo" class="control-label"></label>
            <input asp-for="ValorVeiculo" class="form-control" />
            <span asp-validation-for="ValorVeiculo" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="FabricanteID" class="control-label"></label>
            <select asp-for="FabricanteID" asp-items="Model.Fabricantes" class="form-control"></select>
            <span asp-validation-for="FabricanteID" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Tipo" class="control-label"></label>
            <select asp-for="Tipo" asp-items="Model.TiposVeiculos" class="form-control"></select>
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Descricao" class="control-label"></label>
            <textarea asp-for="Descricao" class="form-control"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
