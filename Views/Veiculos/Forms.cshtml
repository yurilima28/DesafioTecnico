@model Intelectah.ViewModel.VeiculosViewModel

<div class="form-row">
    <div class="form-group col-md-6">
        <label asp-for="ModeloVeiculo" class="control-label">Modelo do veículo</label>
        <input asp-for="ModeloVeiculo" class="form-control" />
        <span asp-validation-for="ModeloVeiculo" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="AnoFabricacao" class="control-label">Ano de fabricação</label>
        <input asp-for="AnoFabricacao" class="form-control" />
        <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-6">
        <label asp-for="ValorVeiculo" class="control-label">Valor do veículo</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">R$</span>
            </div>
            <input asp-for="ValorVeiculo" class="form-control" />
        </div>
        <span asp-validation-for="ValorVeiculo" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="FabricanteID" class="control-label">Fabricante</label>
        <select asp-for="FabricanteID" class="form-control">
            <option value="">Selecione um fabricante</option>
            @foreach (var fabricante in Model.Fabricantes)
            {
                <option value="@fabricante.Value">@fabricante.Text</option>
            }
        </select>
        <span asp-validation-for="FabricanteID" class="text-danger"></span>
    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-6">
        <label asp-for="Tipo" class="control-label">Tipo de veículo</label>
        <select asp-for="Tipo" asp-items="Model.TiposVeiculos" class="form-control"></select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>


    <div class="form-group col-md-6">
        <label asp-for="Descricao" class="control-label">Descrição do veículo</label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
</div>
