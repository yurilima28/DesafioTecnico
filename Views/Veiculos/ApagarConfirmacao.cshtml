@model VeiculosModel;

@{
    ViewData["Title"] = "Confirmação para apagar o veículo";
}

<form method="post" asp-controller="Veiculos" asp-action="Apagar">
    <input type="hidden" name="Id" value="@Model.VeiculoID" />
    <div class="text-center">
        <h3>Realmente deseja apagar o veículo? @Model.ModeloVeiculo</h3>
    </div>
    <a class="btn btn-primary" role="button" asp-controller="Veiculos" asp-action="Index">Cancelar exclusão</a>
    <button type="submit" class="btn btn-danger">Confirmar exclusão</button>
</form>

