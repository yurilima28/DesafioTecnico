@model Intelectah.Models.VeiculosModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Adicionar veículo";
}

<div class="text-center">
    <h1 class="display-4">Adicionar veículo</h1>
</div>
<form asp-controller="Veiculos" asp-action="Criar" method="post">

    @Html.Partial("Forms")

    <button type="submit" class="btn btn-primary" style="margin-top:10px">Adicionar</button>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Veiculos" role="button" style="margin-top:10px">Voltar</a>

</form>
