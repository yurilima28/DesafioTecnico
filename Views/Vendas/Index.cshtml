@model IEnumerable<Intelectah.ViewModel.VendasViewModel>

@{
    ViewData["Title"] = "Vendas";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Vendas" asp-action="Criar">Adicionar nova venda</a>
    </div>
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <b />

    <h1 class="display-4">Lista de Vendas</h1>
    <form>
        <table class="table text-center" id="tabela-vendas">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Data da Venda</th>
                    <th scope="col">Valor Total</th>
                    <th scope="col">Usuário</th>
                    <th scope="col">Concessionária</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var venda in Model)
                    {
                        <tr>
                            <td></td>
                            <td>@venda.Cliente.Nome</td>
                            <td>@venda.DataVenda.ToString("dd/MM/yyyy")</td>
                            <td>@venda.ValorTotal.ToString("C")</td>
                            <td>@venda.Usuario.NomeUsuario</td>
                            <td>@venda.Concessionaria.Nome</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a role="button" class="btn btn-primary" asp-route-id="@venda.VendaId" asp-controller="Vendas" asp-action="Editar">Editar</a>
                                    <a role="button" class="btn btn-danger" asp-route-id="@venda.VendaId" asp-controller="Vendas" asp-action="ApagarConfirmacao">Apagar</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </form>
</div>
