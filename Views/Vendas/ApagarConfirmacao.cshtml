@model Intelectah.ViewModel.VendasViewModel

@{
    ViewData["Title"] = "Confirmar Exclusão";
}

<h1>@ViewData["Title"]</h1>

<p>Você tem certeza de que deseja excluir a venda com ID @Model.VendaId?</p>

<div>
    <form asp-action="Apagar" method="post">
        <input type="hidden" asp-for="VendaId" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
