@model Intelectah.ViewModel.UsuariosViewModel

<form asp-action="@ViewData["FormAction"]" method="post">
    @if (ViewData["FormAction"] == "Edit")
    {
        <input type="hidden" asp-for="UsuarioId" />
    }

    <div class="form-group col-md-6">
        <label asp-for="NomeUsuario" class="control-label">Nome do usuário</label>
        <input asp-for="NomeUsuario" class="form-control" />
        <span asp-validation-for="NomeUsuario" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Senha" class="control-label">Senha</label>
        <input asp-for="Senha" type="password" class="form-control" />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Email" class="control-label">E-mail</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="NivelAcesso" class="control-label">Cargo</label>
        <select asp-for="NivelAcesso" class="form-control">
            <option value="">Informe o cargo</option>
            <option value="Administrador">Administrador</option>
            <option value="Vendedor">Vendedor</option>
            <option value="Gerente">Gerente</option>
        </select>
        <span asp-validation-for="NivelAcesso" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="ConcessionariaID" class="control-label">Concessionária</label>
        <select asp-for="ConcessionariaID" class="form-control">
            <option value="">Selecione uma concessionária</option>
            @foreach (var concessionaria in ViewBag.Concessionarias as List<SelectListItem>)
            {
                <option value="@concessionaria.Value">@concessionaria.Text</option>
            }
        </select>
        <span asp-validation-for="ConcessionariaID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary" style="margin-top:10px">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary" style="margin-top:10px">Cancelar</a>
    </div>
</form>
