@model IEnumerable<Intelectah.Models.UsuariosModel>
@using Microsoft.AspNetCore.Identity
@using Intelectah.Enums

@{
    var isGerente = User.IsInRole(PerfilEnum.Gerente.ToString());
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Usuarios" asp-action="Criar">Adicionar novo usuario</a>
    </div>
    <br />

    <form>
        <table class="table text-center" id="tabela-usuarios">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Nome de Usuário</th>
                    <th scope="col">Login</th>
                    <th scope="col">Email</th>
                    <th scope="col">Cargo</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var usuario in Model)
                    {
                        <tr>
                            <td></td>
                            <td>@usuario.NomeUsuario</td>
                            <td>@usuario.Login</td>
                            <td>@usuario.Email</td>
                            <td>@usuario.NivelAcesso</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a role="button" class="btn btn-primary" asp-route-id="@usuario.UsuarioID" asp-controller="Usuarios" asp-action="Editar">Editar</a>
                                    <a role="button" class="btn btn-danger" asp-route-id="@usuario.UsuarioID" asp-controller="Usuarios" asp-action="ApagarConfirmacao">Apagar</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            
            </tbody>
        </table>
    </form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tabela-usuarios').DataTable({
                "ordering": true,
                "paging": true,
                "searching": true,
                "oLanguage": {
                    "sEmptyTable": "Nenhum registro encontrado na tabela",
                    "sInfo": "Mostrar _START_ até _END_ de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrar 0 até 0 de 0 Registros",
                    "sInfoFiltered": "(Filtrar de _MAX_ total registros)",
                    "sInfoPostFix": "",
                    "sInfoThousands": ".",
                    "sLengthMenu": "Mostrar _MENU_ registros por página",
                    "sLoadingRecords": "Carregando...",
                    "sProcessing": "Processando...",
                    "sZeroRecords": "Nenhum registro encontrado",
                    "sSearch": "Pesquisar",
                    "oPaginate": {
                        "sNext": "Próximo",
                        "sPrevious": "Anterior",
                        "sFirst": "Primeiro",
                        "sLast": "Último"
                    },
                    "oAria": {
                        "sSortAscending": ": Ordenar colunas de forma ascendente",
                        "sSortDescending": ": Ordenar colunas de forma descendente"
                    }
                }
            });
        });
    </script>
    </script>
}